@using BikeStoreSite.ViewModel;
@using Bike_store;
@model ReservationViewModel
@{
    ViewBag.Title = "Create Reservation";
}

<h2>Create Reservation</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <h4>Selecteer een fiets:</h4>
                @Html.DropDownListFor(Model => Model.SelectedBike, Model.BikeSelection, htmlAttributes: new { @class = "control-label col-md-2" })<br /><br />

                <h5>Sorteer op:</h5>
                @Html.ActionLink("Type", "/create/" + Model.Store.StoreId, new { sortOrder = "Type" }) <br />
                @Html.ActionLink("Geslacht", "/create/" + Model.Store.StoreId, new { sortOrder = "Gender" }) <br />
                @Html.ActionLink("Grootte", "/create/" + Model.Store.StoreId, new { sortOrder = "Size" }) <br />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h4>Vul je data in!:</h4>
                <p>@Html.DisplayNameFor(Model => Model.Customers.P_CustomerName): </p> @Html.TextBoxFor(Model => Model.Customers.P_CustomerName) <br /><br />
                <p>@Html.DisplayNameFor(Model => Model.Customers.P_CustomerMail): </p>  @Html.TextBoxFor(Model => Model.Customers.P_CustomerMail) <br /><br />
                <p>@Html.DisplayNameFor(Model => Model.Customers.P_CustomerGender): </p>  @Html.EnumDropDownListFor(model => model.Customers.P_CustomerGender, htmlAttributes: new { @class = "form-control" })<br />

                <p>Reserveren vanaf: (maand/dag/jaar) </p>
                @Html.TextBoxFor(model => model.PickUpDate, new { @class = "form-control datepicker", placeholder = "Enter Pick-up date here..." })<br />

                <p>Reserveren tot: (maand/dag/jaar)</p>
                @Html.TextBoxFor(model => model.DropOffDate, new { id = "date-picker", @class = "form-control datepicker", placeholder = "Enter Drop-off date here..." })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug", "./Index/", new { id = Model.Store.StoreId })
</div>




